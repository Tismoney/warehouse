enum t_node {
	VARIBLE,
	NUMBER,
	OPERATOR
}

class CNode
{
	private:
		t_node type; 
		CNode* left;
		CNode* right;
		CNode* parent;
	public:
		CNode() :
			left(NULL),
			right(NULL),
			parent(NULL)
		{}
        ~CNode():
		{}
}

class CNode_Var : public CNode
{
}

class CNode_Num : public CNode
{
}

class CNode_Opr : public CNode
{
}
